package pjrLeituraEscrita;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class PrincipalEscritaArquivo {
	public static void main(String[] args) {

		try {
            File f = new File ("c:/dir");
            if(!f.exists()) f.mkdir();
			FileWriter escrita = new FileWriter("c:/dir/arq.txt", true);
			BufferedWriter bwEscrita = new BufferedWriter(escrita);
			bwEscrita.write("Teste");
			bwEscrita.newLine();
			bwEscrita.close();
			escrita.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
